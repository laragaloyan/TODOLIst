<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="4dp"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true"
    xmlns:tools="http://schemas.android.com/tools">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/padding_normal"
        android:background="@android:color/white">

        <ImageView
            android:id="@+id/action_view_todo_item_remove"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            android:tint="@color/colorPrimary"
            android:src="@android:drawable/ic_delete"/>

        <TextView
            android:id="@+id/label_view_todo_item_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_normal"
            android:textSize="16dp"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/label_view_todo_item_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/label_view_todo_item_title"
            android:ellipsize="end"
            android:lines="1"/>

        <TextView
            android:id="@+id/label_view_todo_item_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/label_view_todo_item_description"
            android:ellipsize="end"/>

    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>